{
  "extends": "../../tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.js"
  ],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "noEmit": false,
    "sourceMap": false,
    "types": ["cypress"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
